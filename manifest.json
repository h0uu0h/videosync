{
    "manifest_version": 3,
    "name": "视频播放器同步插件",
    "version": "1.0.0",
    "description": "同步多个设备的视频播放进度",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["http://*/*", "https://*/*", "ws://*/*", "wss://*/*"],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "视频同步控制"
    },
    "background": {
        "service_worker": "background/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/utils.js", "content/video-detector.js", "content/content.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["content/*", "scripts/*"],
            "matches": ["<all_urls>"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
